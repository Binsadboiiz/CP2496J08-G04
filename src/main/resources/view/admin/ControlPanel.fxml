<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminController"
            prefWidth="640.0" prefHeight="500.0">

   <children>
      <!-- Top bar -->
      <HBox spacing="10.0" AnchorPane.topAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <padding>
            <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
         </padding>
         <children>
            <Label text="Dashboard" style="-fx-font-size:24px; -fx-font-weight:bold;"/>
            <HBox spacing="0.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search..." prefWidth="200.0"/>
                  <Button fx:id="clearButton" text="âœ•" onAction="#onClearSearch"/>
               </children>
            </HBox>
            <Label text="ðŸ””" style="-fx-font-size:18px;"/>
         </children>
      </HBox>

      <!-- Statistic cards -->
      <HBox spacing="10.0" AnchorPane.topAnchor="60.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" alignment="CENTER">
         <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
         </padding>
         <children>
            <VBox prefWidth="140.0" prefHeight="80.0" alignment="CENTER_LEFT"
                  style="-fx-background-color:white; -fx-background-radius:8;">
               <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
               <effect><DropShadow offsetY="2.0" radius="5.0" color="#00000033"/></effect>
               <children>
                  <Label text="Total Products" style="-fx-text-fill:#666666;"/>
                  <Label text="348" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
               </children>
            </VBox>
            <VBox prefWidth="140.0" prefHeight="80.0" alignment="CENTER_LEFT"
                  style="-fx-background-color:white; -fx-background-radius:8;">
               <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
               <effect><DropShadow offsetY="2.0" radius="5.0" color="#00000033"/></effect>
               <children>
                  <Label text="Total Employees" style="-fx-text-fill:#666666;"/>
                  <Label text="42" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
               </children>
            </VBox>
            <VBox prefWidth="140.0" prefHeight="80.0" alignment="CENTER_LEFT"
                  style="-fx-background-color:white; -fx-background-radius:8;">
               <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
               <effect><DropShadow offsetY="2.0" radius="5.0" color="#00000033"/></effect>
               <children>
                  <Label text="Today's Sales" style="-fx-text-fill:#666666;"/>
                  <Label text="12,548" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
               </children>
            </VBox>
            <VBox prefWidth="140.0" prefHeight="80.0" alignment="CENTER_LEFT"
                  style="-fx-background-color:white; -fx-background-radius:8;">
               <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
               <effect><DropShadow offsetY="2.0" radius="5.0" color="#00000033"/></effect>
               <children>
                  <Label text="Stock Alerts" style="-fx-text-fill:#666666;"/>
                  <Label text="12" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
               </children>
            </VBox>
         </children>
      </HBox>

      <!-- Recent Orders -->
      <Label text="Recent Orders" AnchorPane.topAnchor="160.0"
             AnchorPane.leftAnchor="10.0"
             style="-fx-font-size:18px; -fx-font-weight:bold;"/>

      <TableView fx:id="orderTable"
                 AnchorPane.topAnchor="190.0"
                 AnchorPane.leftAnchor="10.0"
                 AnchorPane.rightAnchor="10.0"
                 AnchorPane.bottomAnchor="10.0">
         <columns>
            <TableColumn fx:id="colOrderId"  text="ORDER ID"  prefWidth="100.0"/>
            <TableColumn fx:id="colCustomer" text="CUSTOMER"   prefWidth="120.0"/>
            <TableColumn fx:id="colStatus"   text="STATUS"     prefWidth="100.0"/>
            <TableColumn fx:id="colAmount"   text="AMOUNT"     prefWidth="100.0"/>
            <TableColumn fx:id="colDate"     text="DATE"       prefWidth="100.0"/>
         </columns>
      </TableView>

   </children>
</AnchorPane>
