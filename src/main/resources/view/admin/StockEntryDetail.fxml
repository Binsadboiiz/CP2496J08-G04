<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="366.0" prefWidth="387.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.StockEntryDetailController">
    <VBox spacing="14" style="-fx-padding:16;">
        <Label fx:id="lblTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Entry Details" />
        <TableView fx:id="tableDetail" prefHeight="220">
            <columns>
                <TableColumn fx:id="colProduct" prefWidth="180" text="Product" />
                <TableColumn fx:id="colQty" prefWidth="80" text="Quantity" />
                <TableColumn fx:id="colUnitCost" prefWidth="100" text="Unit Cost" />
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="8">
            <Label text="Total: " />
            <Label fx:id="lblTotal" text="0" />
        </HBox>
        <Button onAction="#onClose" text="Close" />
    </VBox>
</AnchorPane>
