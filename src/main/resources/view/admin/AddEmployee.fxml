<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.admin.AddEmployeeController"
            prefWidth="400" prefHeight="500"
            style="-fx-padding:20;">

    <!-- Title -->
    <Label layoutX="20" layoutY="10"
           text="Add Employee"
           style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <!-- Full Name -->
    <Label layoutX="20" layoutY="50" text="Full Name:*"/>
    <TextField fx:id="fullNameField"
               layoutX="140" layoutY="46"
               prefWidth="220"/>

    <!-- Date of Birth -->
    <Label layoutX="20" layoutY="90" text="Date of Birth:*"/>
    <DatePicker fx:id="dobPicker"
                layoutX="140" layoutY="86"
                prefWidth="220"/>

    <!-- ID Card -->
    <Label layoutX="20" layoutY="130" text="ID Card:*"/>
    <TextField fx:id="idCardField"
               layoutX="140" layoutY="126"
               prefWidth="220"/>

    <!-- Hometown -->
    <Label layoutX="20" layoutY="170" text="Hometown:"/>
    <TextField fx:id="hometownField"
               layoutX="140" layoutY="166"
               prefWidth="220"/>

    <!-- Phone -->
    <Label layoutX="20" layoutY="210" text="Phone:"/>
    <TextField fx:id="phoneField"
               layoutX="140" layoutY="206"
               prefWidth="220"/>

    <!-- Email -->
    <Label layoutX="20" layoutY="250" text="Email:"/>
    <TextField fx:id="emailField"
               layoutX="140" layoutY="246"
               prefWidth="220"/>

    <!-- Username -->
    <Label layoutX="20" layoutY="290" text="Username:*"/>
    <TextField fx:id="usernameField"
               layoutX="140" layoutY="286"
               prefWidth="220"/>

    <!-- Password -->
    <Label layoutX="20" layoutY="330" text="Password:*"/>
    <PasswordField fx:id="passwordField"
                   layoutX="140" layoutY="326"
                   prefWidth="220"/>

    <!-- Role -->
    <Label layoutX="20" layoutY="370" text="Role:*"/>
    <ComboBox fx:id="roleBox"
              layoutX="140" layoutY="366"
              prefWidth="220"/>

    <!-- Buttons -->
    <HBox layoutX="140" layoutY="420" spacing="10">
        <Button fx:id="addEmployeeButton"
                text="Add"
                onAction="#handleAddEmployee"
                prefWidth="100"/>
        <Button fx:id="cancelButton"
                text="Cancel"
                onAction="#handleCancel"
                prefWidth="100"/>
    </HBox>

</AnchorPane>
