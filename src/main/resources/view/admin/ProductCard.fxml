<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="195" prefHeight="345" styleClass="product-card"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.admin.ProductCardController">
    <VBox spacing="8" alignment="TOP_CENTER" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" style="-fx-padding:13;">
        <ImageView fx:id="imgProduct" fitWidth="120" fitHeight="120"/>
        <Label fx:id="lblName" styleClass="product-name" wrapText="true"/>
        <Label fx:id="lblBrand" styleClass="product-brand"/>
        <Label fx:id="lblType" styleClass="product-type"/>
        <Label fx:id="lblPrice" styleClass="product-price"/>
        <Label fx:id="lblDesc" styleClass="product-desc" wrapText="true"/>
        <HBox spacing="8" alignment="CENTER">
            <Button fx:id="btnEdit" text="Edit" styleClass="btn-edit" onAction="#onEdit"/>
            <Button fx:id="btnDelete" text="Delete" styleClass="btn-delete" onAction="#onDelete"/>
        </HBox>
    </VBox>
</AnchorPane>
