<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../css/scenemain.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10" left="10" right="10" top="20" /></padding>

            <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                <image><Image url="@../../images/register_logo.png" /></image>
            </ImageView>

            <Label text="Nhân viên" />
            <Label text="Vai Trò" />

            <Button fx:id="btnHome" maxWidth="180" text="Control Panel" onAction="#loadControlPanel">
                <font><Font name="Times New Roman Bold" size="18" /></font>
            </Button>
            <Button fx:id="btnProducts" maxWidth="180" text="Products">
                <font><Font name="Times New Roman Bold" size="18" /></font>
            </Button>
            <Button fx:id="btnOrders" maxWidth="180" text="Role Management" onAction="#loadRoleManagement">
                <font><Font name="Times New Roman Bold" size="18" /></font>
            </Button>
            <Button fx:id="btnCustomers" maxWidth="180" text="Customers">
                <font><Font name="Times New Roman Bold" size="18" /></font>
            </Button>

            <Pane VBox.vgrow="ALWAYS" />

            <Button fx:id="btnLogout" maxWidth="180" style="-fx-background-color: red; -fx-text-fill: white;" text="Logout" onAction="#logout">
                <font><Font name="Times New Roman Bold" size="18" /></font>
            </Button>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <AnchorPane fx:id="contentArea" prefHeight="500.0" prefWidth="640.0"/>
    </center>

</BorderPane>
