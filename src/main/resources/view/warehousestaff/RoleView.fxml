<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox spacing="0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.warehousestaff.RoleViewController"
      style="-fx-background-color: #f5f5f5;">

    <!-- Header with back button and employee name -->
    <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;">
        <Button text="â†" style="-fx-font-size: 18px; -fx-background-color: transparent; -fx-border-color: transparent;" />
        <Label fx:id="lblEmployeeName" text="Russell Sims" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Main Content -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox spacing="30.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="20.0" left="30.0" right="30.0" bottom="30.0" />
            </padding>

            <!-- Profile Image Section -->
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
                <Label text="PROFILE IMAGE" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: bold;" />

                <!-- Profile Image Container -->
                <VBox alignment="CENTER" spacing="15.0">
                    <ImageView fx:id="profileImage" fitHeight="120.0" fitWidth="120.0"
                               style="-fx-background-radius: 60; -fx-border-radius: 60;">
                        <!-- Default profile image placeholder -->
                        <Image url="@../../images/logo-app.png" />
                    </ImageView>

                    <Button fx:id="btnChangeProfileImage" text="Change Profile Image"
                            onAction="#handleChangeProfileImage"
                            style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-border-color: transparent; -fx-underline: true;" />
                </VBox>
            </VBox>

            <!-- Role Section -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
                <Label text="ROLE" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: bold;" />

                <VBox spacing="5.0">
                    <Label text="Role" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                    <ComboBox fx:id="cbRole" prefWidth="200.0"
                              style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                </VBox>
            </VBox>

            <!-- Employee Details Section -->
            <VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
                <Label text="EMPLOYEE DETAILS" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: bold;" />

                <GridPane hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50.0" />
                        <ColumnConstraints percentWidth="50.0" />
                    </columnConstraints>

                    <!-- First Name -->
                    <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="First Name" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                        <TextField fx:id="txtFirstName"
                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;" />
                    </VBox>

                    <!-- Last Name -->
                    <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Last Name" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                        <TextField fx:id="txtLastName"
                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;" />
                    </VBox>

                    <!-- Email Address -->
                    <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <HBox spacing="5.0" alignment="CENTER_LEFT">
                            <Label text="Email Address" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                            <Button text="ðŸ“‹" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 12px;" />
                        </HBox>
                        <TextField fx:id="txtEmail"
                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;" />
                    </VBox>

                    <!-- Phone Number -->
                    <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                        <HBox spacing="5.0" alignment="CENTER_LEFT">
                            <Label text="Phone Number" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                            <Button text="ðŸ“‹" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 12px;" />
                        </HBox>
                        <TextField fx:id="txtPhone"
                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;" />
                    </VBox>

                    <!-- Position -->
                    <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                        <Label text="Position" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                        <TextField fx:id="txtPosition" editable="false"
                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10; -fx-opacity: 0.6;" />
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20 0;">
                <Button fx:id="btnSaveChanges" text="Save Changes" onAction="#handleSaveChanges"
                        prefWidth="140.0" prefHeight="40.0"
                        style="-fx-background-color: #343a40; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" />

                <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel"
                        prefWidth="100.0" prefHeight="40.0"
                        style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-border-color: transparent; -fx-font-size: 14px;" />
            </HBox>

        </VBox>
    </ScrollPane>

</VBox>