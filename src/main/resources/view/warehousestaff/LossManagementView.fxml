<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="650.0" prefWidth="820.0" fx:controller="controller.warehousestaff.LossManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Loss Management" />
    </HBox>

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">

        <VBox spacing="15.0" prefWidth="600.0">
            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Product List" />
                    <TextField fx:id="txtSearchProduct" promptText="Search products..." prefWidth="200.0"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 5 10; -fx-font-size: 12px; -fx-border-color: #ccc; -fx-border-width: 1;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnRefreshProducts" onAction="#handleRefreshProducts" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px;" text="Refresh" />
                </HBox>
                <Separator />
                <TableView fx:id="tblProducts" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="colProductCode" prefWidth="100.0" text="Product ID" />
                        <TableColumn fx:id="colProductName" prefWidth="200.0" text="Product Name" />
                        <TableColumn fx:id="colBrand" prefWidth="100.0" text="Brand" />
                        <TableColumn fx:id="colTotalStock" prefWidth="80.0" text="Stock" />
                        <TableColumn fx:id="colTotalLoss" prefWidth="80.0" text="Lost" />
                        <TableColumn fx:id="colAvailable" prefWidth="80.0" text="Available" />
                    </columns>
                </TableView>
            </VBox>

            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Loss Report" />
                    <TextField fx:id="txtSearchLossReport" promptText="Search reports..." prefWidth="200.0"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 5 10; -fx-font-size: 12px; -fx-border-color: #ccc; -fx-border-width: 1;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="lblTotalLossReports" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" />
                    <Button fx:id="btnRefreshReports" onAction="#handleRefreshReports" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px;" text="Refresh" />
                </HBox>
                <Separator />
                <TableView fx:id="tblLossReports" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="colReportID" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="colLossProduct" prefWidth="120.0" text="Product" />
                        <TableColumn fx:id="colLossQuantity" prefWidth="60.0" text="Loss Qty" />
                        <TableColumn fx:id="colLossReason" prefWidth="100.0" text="Reason" />
                        <TableColumn fx:id="colLossValue" prefWidth="80.0" text="Loss Value" />
                        <TableColumn fx:id="colReportDate" prefWidth="80.0" text="Report Date" />
                        <TableColumn fx:id="colActions" prefWidth="60.0" text="Actions" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>

        <VBox spacing="15.0" prefWidth="400.0">

            <VBox style="-fx-background-color: #e3f2fd; -fx-border-color: #2196f3; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Selected Information" />
                <Separator />
                <Label fx:id="lblSelectedProduct" text="No product selected" wrapText="true" />
                <Label fx:id="lblAvailableQuantity" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Available Quantity: 0" />
                <Label fx:id="lblAvgUnitCost" style="-fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Avg Unit Cost: 0 VND" />
            </VBox>

            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 15 0; -fx-text-fill: #dc3545;" text="Add Loss Report" />

                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="NEVER" />
                    </rowConstraints>

                    <Label text="Loss Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtLossQuantity" promptText="Enter quantity..." GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Loss Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <DatePicker fx:id="dpLossDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Loss Reason:" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                    <TextArea fx:id="txtLossReason" prefRowCount="4" promptText="Describe the reason for loss in detail..." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </GridPane>

                <Separator />

                <HBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="btnAddLossReport" onAction="#handleAddLossReport" disable="true"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20;"
                            text="ADD LOSS REPORT" />
                </HBox>
            </VBox>

            <VBox style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Quick Statistics" />
                <Separator />
                <HBox spacing="20.0">
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Total Products" />
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #007bff;" text="0" fx:id="lblTotalProducts" />
                    </VBox>
                    <Separator orientation="VERTICAL" />
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Products with Loss" />
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #dc3545;" text="0" fx:id="lblProductsWithLoss" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </HBox>

</VBox>