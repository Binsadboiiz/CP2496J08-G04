<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.warehousestaff.LossManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Quản lý tổn thất" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleSearchProduct" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" text="🔍 Tìm kiếm sản phẩm" />
        <Button fx:id="btnRefresh" onAction="#handleRefresh" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="🔄 Làm mới" />
        <Button onAction="#handleDeleteLossReport" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="🗑️ Xóa báo cáo" />
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20.0" VBox.vgrow="ALWAYS">

        <!-- Left Panel - Products List -->
        <VBox spacing="15.0" prefWidth="600.0">
            <!-- Products Table -->
            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" text="📦 Danh sách sản phẩm" />
                <TableView fx:id="tblProducts" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="colProductCode" prefWidth="100.0" text="Mã SP" />
                        <TableColumn fx:id="colProductName" prefWidth="200.0" text="Tên sản phẩm" />
                        <TableColumn fx:id="colBrand" prefWidth="100.0" text="Thương hiệu" />
                        <TableColumn fx:id="colTotalStock" prefWidth="80.0" text="Tồn kho" />
                        <TableColumn fx:id="colTotalLoss" prefWidth="80.0" text="Đã mất" />
                        <TableColumn fx:id="colAvailable" prefWidth="80.0" text="Khả dụng" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Loss Reports History -->
            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="📋 Lịch sử báo cáo tổn thất" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="lblTotalLossReports" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Tổng số báo cáo: 0" />
                </HBox>
                <Separator />
                <TableView fx:id="tblLossReports" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="colReportID" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colLossProduct" prefWidth="150.0" text="Sản phẩm" />
                        <TableColumn fx:id="colLossQuantity" prefWidth="80.0" text="SL mất" />
                        <TableColumn fx:id="colLossReason" prefWidth="120.0" text="Lý do" />
                        <TableColumn fx:id="colEmployee" prefWidth="100.0" text="Người tạo" />
                        <TableColumn fx:id="colLossValue" prefWidth="100.0" text="Giá trị mất" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>

        <!-- Right Panel - Loss Report Form -->
        <VBox spacing="15.0" prefWidth="400.0">

            <!-- Selection Info -->
            <VBox style="-fx-background-color: #e3f2fd; -fx-border-color: #2196f3; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="📋 Thông tin đã chọn" />
                <Separator />
                <Label fx:id="lblSelectedProduct" text="Chưa chọn sản phẩm" wrapText="true" />
                <Label fx:id="lblAvailableQuantity" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Số lượng khả dụng: 0" />
            </VBox>

            <!-- Loss Report Form -->
            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 15 0; -fx-text-fill: #dc3545;" text="📝 Tạo báo cáo tổn thất" />

                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="NEVER" />
                    </rowConstraints>

                    <Label text="Số lượng tổn thất:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtLossQuantity" promptText="Nhập số lượng..." GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Ngày tổn thất:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <DatePicker fx:id="dpLossDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Lý do tổn thất:" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                    <TextArea fx:id="txtLossReason" prefRowCount="4" promptText="Mô tả chi tiết lý do tổn thất..." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </GridPane>

                <Separator />

                <HBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="btnCreateLossReport" onAction="#handleCreateLossReport" disable="true"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20;"
                            text="📝 TẠO BÁO CÁO TỔN THẤT" />
                </HBox>
            </VBox>

            <!-- Statistics -->
            <VBox style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="📊 Thống kê nhanh" />
                <Separator />
                <HBox spacing="20.0">
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Tổng sản phẩm" />
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #007bff;" text="0" fx:id="lblTotalProducts" />
                    </VBox>
                    <Separator orientation="VERTICAL" />
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Sản phẩm có tổn thất" />
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #dc3545;" text="0" fx:id="lblProductsWithLoss" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </HBox>

</VBox>