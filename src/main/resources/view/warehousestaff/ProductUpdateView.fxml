<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.warehousestaff.ProductUpdateController">
    <children>
        <Label text="CẬP NHẬT SẢN PHẨM">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <HBox spacing="10.0">
            <children>
                <Label text="Chọn sản phẩm:" />
                <ComboBox fx:id="productComboBox" prefWidth="200.0" />
                <Button onAction="#refreshProducts" text="Làm mới" />
                <Button onAction="#clearForm" text="Xóa form" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </HBox>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="80.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Tên sản phẩm:" />
                <TextField fx:id="productNameField" GridPane.columnIndex="1" />

                <Label text="Mã sản phẩm:" GridPane.rowIndex="1" />
                <TextField fx:id="productCodeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Mã vạch:" GridPane.rowIndex="2" />
                <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="generateBarcodeButton" text="Tạo mã" GridPane.columnIndex="2" GridPane.rowIndex="2"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

                <Label text="Thương hiệu:" GridPane.rowIndex="3" />
                <TextField fx:id="brandField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Loại:" GridPane.rowIndex="4" />
                <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Giá:" GridPane.rowIndex="5" />
                <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Mô tả:" GridPane.rowIndex="6" />
                <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Hình ảnh:" GridPane.rowIndex="7" />
                <TextField fx:id="imageField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </GridPane>

        <Separator />

        <Label text="THÔNG SỐ KỸ THUẬT">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" top="20.0" />
            </VBox.margin>
        </Label>

        <HBox spacing="10.0">
            <children>
                <TextField fx:id="specNameField" promptText="Tên thông số" prefWidth="150.0" />
                <TextField fx:id="specValueField" promptText="Giá trị" prefWidth="200.0" />
                <Button fx:id="addSpecButton" text="Thêm" />
                <Button fx:id="deleteSpecButton" text="Xóa" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </HBox>

        <TableView fx:id="specTable" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="specNameColumn" prefWidth="200.0" text="Tên thông số" />
                <TableColumn fx:id="specValueColumn" prefWidth="300.0" text="Giá trị" />
            </columns>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </TableView>

        <HBox spacing="10.0">
            <children>
                <Button fx:id="updateButton" text="Cập nhật sản phẩm" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Label fx:id="statusLabel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>