<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.warehousestaff.HomeViewController">
    <children>
        <!-- Main Title -->
        <Label text="WAREHOUSE STAFF HOME">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>

        <!-- Overview Information -->
        <VBox spacing="20.0">
            <children>
                <Label text="OVERVIEW INFORMATION">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <HBox spacing="20.0">
                    <children>
                        <!-- Total Products Card -->
                        <VBox alignment="CENTER" spacing="10.0"
                              style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #45a049); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 2);"
                              HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="📦" style="-fx-text-fill: white;">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="totalProductsLabel" text="0" style="-fx-text-fill: white;">
                                    <font>
                                        <Font name="System Bold" size="30.0" />
                                    </font>
                                </Label>
                                <Label text="Total Products" style="-fx-text-fill: white;" textAlignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Low Stock Products Card -->
                        <VBox alignment="CENTER" spacing="10.0"
                              style="-fx-background-color: linear-gradient(to bottom, #FF9800, #F57C00); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 2);"
                              HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="⚠️" style="-fx-text-fill: white;">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lowStockLabel" text="0" style="-fx-text-fill: white;">
                                    <font>
                                        <Font name="System Bold" size="30.0" />
                                    </font>
                                </Label>
                                <Label text="Low Stock Products" style="-fx-text-fill: white;" textAlignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Stock Entries Card -->
                        <VBox alignment="CENTER" spacing="10.0"
                              style="-fx-background-color: linear-gradient(to bottom, #2196F3, #1976D2); -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 2);"
                              HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="📋" style="-fx-text-fill: white;">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="totalStockEntriesLabel" text="0" style="-fx-text-fill: white;">
                                    <font>
                                        <Font name="System Bold" size="30.0" />
                                    </font>
                                </Label>
                                <Label text="Stock Entries" style="-fx-text-fill: white;" textAlignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="40.0" />
            </VBox.margin>
        </VBox>

        <!-- Separator -->
        <Separator>
            <VBox.margin>
                <Insets bottom="25.0" />
            </VBox.margin>
        </Separator>

        <!-- Main Functions -->
        <VBox spacing="20.0">
            <children>
                <Label text="MAIN FUNCTIONS">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Inventory Management Function -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" onMouseClicked="#handleInventoryManagement"
                      style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 3);">
                    <children>
                        <VBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 40; -fx-padding: 12;">
                            <children>
                                <Label text="📦" style="-fx-text-fill: white;">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Inventory Management" style="-fx-text-fill: white;">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="View and manage inventory stock in the system" style="-fx-text-fill: rgba(255,255,255,0.8);" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Stock Entry Function -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" onMouseClicked="#handleStockEntry"
                      style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe); -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 3);">
                    <children>
                        <VBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 40; -fx-padding: 12;">
                            <children>
                                <Label text="📋" style="-fx-text-fill: white;">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Stock Entry" style="-fx-text-fill: white;">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Create and manage stock entries from suppliers" style="-fx-text-fill: rgba(255,255,255,0.8);" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Loss Report Function -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" onMouseClicked="#handleLossManagement"
                      style="-fx-background-color: linear-gradient(to right, #fa709a, #fee140); -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 3);">
                    <children>
                        <VBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 40; -fx-padding: 12;">
                            <children>
                                <Label text="⚠️" style="-fx-text-fill: white;">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Loss Report" style="-fx-text-fill: white;">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Track and report damaged or lost goods" style="-fx-text-fill: rgba(255,255,255,0.8);" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Spacer to push content up -->
        <Region VBox.vgrow="ALWAYS" />
    </children>
    <padding>
        <Insets bottom="25.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>