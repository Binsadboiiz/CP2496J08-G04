<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.warehousestaff.InventoryReportController"
      prefHeight="700.0" prefWidth="900.0">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 8;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Inventory Report" />
    </HBox>

    <HBox spacing="10.0" prefHeight="60.0">
        <VBox alignment="CENTER" spacing="3.0" style="-fx-background-color: #3498db; -fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 10px; -fx-text-fill: white;" text="Total Products" />
            <Label fx:id="lblTotalProducts" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="3.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 10px; -fx-text-fill: white;" text="Out of Stock" />
            <Label fx:id="lblOutOfStockItems" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="3.0" style="-fx-background-color: #27ae60; -fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 10px; -fx-text-fill: white;" text="Total Stock Value" />
            <Label fx:id="lblTotalValue" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" text="0 VND" />
        </VBox>
    </HBox>

    <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #e3f2fd; -fx-border-color: #2196f3; -fx-padding: 10; -fx-background-radius: 8;">
        <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Filters:" />

        <VBox spacing="2.0">
            <Label style="-fx-font-size: 10px; -fx-text-fill: #1976d2;" text="Search:" />
            <TextField fx:id="txtSearch" prefWidth="150.0" promptText="Code or Product Name..." style="-fx-font-size: 11px;" />
        </VBox>

        <VBox spacing="2.0">
            <Label style="-fx-font-size: 10px; -fx-text-fill: #1976d2;" text="Status:" />
            <ComboBox fx:id="cbStatusFilter" prefWidth="120.0" style="-fx-font-size: 11px;" />
        </VBox>

        <VBox spacing="2.0">
            <Label style="-fx-font-size: 10px; -fx-text-fill: #1976d2;" text="Actions:" />
            <HBox spacing="5.0">
                <Button onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 11px; -fx-padding: 5 10;" text="Refresh" />
                <Button onAction="#handleExportToTXT" style="-fx-background-color: #6f42c1; -fx-text-fill: white; -fx-font-size: 11px; -fx-padding: 5 10;" text="Export TXT" />
            </HBox>
        </VBox>
    </HBox>

    <HBox spacing="15.0" VBox.vgrow="ALWAYS">

        <VBox spacing="8.0" prefWidth="550.0">
            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 8;">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 0 0 8 0;" text="Inventory List" />
                <TableView fx:id="tblInventory" prefHeight="450.0">
                    <columns>
                        <TableColumn fx:id="colProductCode" prefWidth="70.0" text="Product ID" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colProductName" prefWidth="120.0" text="Product Name" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colBrand" prefWidth="70.0" text="Brand" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colTotalReceived" prefWidth="60.0" text="Received" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colTotalLoss" prefWidth="60.0" text="Loss/Sold" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colCurrentStock" prefWidth="60.0" text="Stock" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colSalableStock" prefWidth="60.0" text="Salable" style="-fx-font-size: 11px;" />
                        <TableColumn fx:id="colStatus" prefWidth="70.0" text="Status" style="-fx-font-size: 11px;" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>

        <VBox spacing="10.0" prefWidth="300.0">

            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 8;">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="Status Distribution" />
                <PieChart fx:id="pieStockStatus" prefHeight="180.0" legendVisible="true" />
            </VBox>

            <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 8;">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="Inventory Statistics" />
                <BarChart fx:id="barTopProducts" prefHeight="180.0" legendVisible="true">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" style="-fx-font-size: 9px;" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" style="-fx-font-size: 9px;" />
                    </yAxis>
                </BarChart>
            </VBox>
        </VBox>
    </HBox>

</VBox>