<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.warehousestaff.StockEntryController">

    <VBox fx:id="listView" spacing="10" style="-fx-padding:15;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Stock Entry Management" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #e3f2fd; -fx-border-color: #2196f3; -fx-padding: 10; -fx-background-radius: 8;">
            <VBox spacing="2.0">
                <Label style="-fx-font-size: 10px; -fx-text-fill: #1976d2;" text="Search:" />
                <TextField fx:id="txtSearch" promptText="Search by ID, Supplier, User, Date..." style="-fx-font-size: 11px;" prefWidth="300" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAdd" onAction="#onAdd"
                    style="-fx-background-color: #2584f8; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15;"
                    text="Add New Entry" />
            <Button fx:id="btnRefresh" onAction="#onRefresh"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15;"
                    text="Refresh" />
        </HBox>

        <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Stock Entry List" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblRecordCount" style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Total: 0 records" />
            </HBox>
            <Separator style="-fx-padding: 5 0;" />

            <TableView fx:id="table" prefHeight="450">
                <columns>
                    <TableColumn fx:id="colEntryID" prefWidth="80" text="Entry ID" />
                    <TableColumn fx:id="colDate" prefWidth="120" text="Entry Date" />
                    <TableColumn fx:id="colSupplier" prefWidth="200" text="Supplier" />
                    <TableColumn fx:id="colTotalQuantity" prefWidth="100" text="Total Qty" />
                    <TableColumn fx:id="colTotalValue" prefWidth="120" text="Total Value" />
                    <TableColumn fx:id="colDetail" prefWidth="80" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </VBox>

    <VBox fx:id="formView" spacing="12" style="-fx-padding: 16;" visible="false" managed="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Add New Stock Entry" />
        </HBox>

        <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;" spacing="15">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Entry Information" />

            <HBox spacing="15">
                <VBox spacing="5">
                    <Label text="Supplier:" />
                    <ComboBox fx:id="cbSupplier" prefWidth="250" promptText="Select supplier" />
                </VBox>

                <VBox spacing="5">
                    <Label text="Entry Date:" />
                    <DatePicker fx:id="dpDate" prefWidth="150" />
                </VBox>
            </HBox>
        </VBox>

        <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;" spacing="15">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Add Products" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ComboBox fx:id="cbProduct" prefWidth="200" promptText="Select product" />
                <TextField fx:id="txtQty" prefWidth="80" promptText="Quantity" />
                <TextField fx:id="txtUnitCost" prefWidth="100" promptText="Unit cost" />
                <Button fx:id="btnAddProduct" onAction="#onAddProduct"
                        style="-fx-background-color: #2584f8; -fx-text-fill: white; -fx-padding: 8 15;"
                        text="Add Product" />
            </HBox>

            <TableView fx:id="tableDetails" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colProductIDForm" prefWidth="60" text="ID" />
                    <TableColumn fx:id="colProductForm" prefWidth="150" text="Product" />
                    <TableColumn fx:id="colSupplierForm" prefWidth="120" text="Supplier" />
                    <TableColumn fx:id="colDateForm" prefWidth="100" text="Date" />
                    <TableColumn fx:id="colQtyForm" prefWidth="60" text="Qty" />
                    <TableColumn fx:id="colUnitCostForm" prefWidth="100" text="Unit Cost" />
                    <TableColumn fx:id="colAction" prefWidth="80" text="Action" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="14">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Grand Total:" />
                <Label fx:id="lblTotalForm" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="0 VND" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnSave" onAction="#onSave"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                    text="Save Entry" />
            <Button fx:id="btnCancel" onAction="#onCancel"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                    text="Cancel" />
        </HBox>
    </VBox>

    <VBox fx:id="detailView" spacing="14" style="-fx-padding:16;" visible="false" managed="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 8;">
            <Label fx:id="lblTitle" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Entry Details" />
        </HBox>

        <VBox style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 15; -fx-background-radius: 10;">
            <TableView fx:id="tableDetail" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colProductIDDetail" prefWidth="60" text="Product ID" />
                    <TableColumn fx:id="colProductDetail" prefWidth="180" text="Product Name" />
                    <TableColumn fx:id="colSupplierDetail" prefWidth="150" text="Supplier" />
                    <TableColumn fx:id="colDateDetail" prefWidth="100" text="Date" />
                    <TableColumn fx:id="colQtyDetail" prefWidth="80" text="Quantity" />
                    <TableColumn fx:id="colUnitCostDetail" prefWidth="100" text="Unit Cost" />
                    <TableColumn fx:id="colTotalDetail" prefWidth="120" text="Total" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="8" style="-fx-padding: 10 0 0 0;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Grand Total: " />
                <Label fx:id="lblTotal" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="0 VND" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER_LEFT">
            <Button onAction="#onClose"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                    text="Back to List" />
        </HBox>
    </VBox>

</AnchorPane>