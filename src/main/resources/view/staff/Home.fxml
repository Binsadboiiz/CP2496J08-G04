<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.staff.HomeController">

    <!-- Top bar with title and search section -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label alignment="CENTER" prefHeight="35.0" prefWidth="816.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="HOME - PRODUCT LIST" textAlignment="CENTER" />

            <HBox alignment="TOP_RIGHT" spacing="10">
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="254.0" promptText="Search product..." />
                <Button onAction="#handleSearch" text="Search" />
                <Button onAction="#handleReset" text="Reset" />
            </HBox>
        </VBox>
    </top>

    <!-- Center area for displaying dynamic product list from FlowPane -->
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <FlowPane fx:id="productGrid" hgap="20" prefWrapLength="600" style="-fx-background-color: #f8f8f8;" vgap="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
