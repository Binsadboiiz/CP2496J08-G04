<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.staff.InvoiceHistoryController">
    <!-- Top section: Title and filter bar -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="880.0"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"
                   text="INVOICE HISTORY" />
            <HBox spacing="10">
                <Label text="Customer:" />
                <TextField fx:id="customerFilterField" prefHeight="25.0" prefWidth="138.0" />
                <Label text="Product:" />
                <TextField fx:id="productFilterField" prefHeight="25.0" prefWidth="159.0" />
                <Label text="Sale Date:" />
                <DatePicker fx:id="dateFilterPicker" prefHeight="25.0" prefWidth="161.0" />
                <Button fx:id="filterButton" onAction="#handleFilter" text="Filter" />
                <Button fx:id="resetButton" onAction="#handleReset" text="Reset" />
            </HBox>
        </VBox>
    </top>
    <!-- Center section: Table view for invoice records -->
    <center>
        <TableView fx:id="invoiceTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="invoiceIdColumn" prefWidth="80.0" text="Invoice ID" />
                <TableColumn fx:id="customerIdColumn" prefWidth="120.0" text="Customer Name" />
                <TableColumn fx:id="productNameColumn" prefWidth="140.0" text="Product" />
                <TableColumn fx:id="userIdColumn" prefWidth="80.0" text="Staff ID" />
                <TableColumn fx:id="dateColumn" prefWidth="95.0" text="Sale Date" />
                <TableColumn fx:id="discountColumn" prefWidth="90.0" text="Discount" />
                <TableColumn fx:id="totalAmountColumn" prefWidth="120.0" text="Total Amount" />
                <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Status" />
            </columns>
        </TableView>
    </center>
</BorderPane>