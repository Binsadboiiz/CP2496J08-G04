<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="820.0"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.staff.InvoiceHistoryController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="LỊCH SỬ HÓA ĐƠN BÁN HÀNG" />
            <HBox prefHeight="25.0" prefWidth="1849.0" spacing="10">
                <Label text="Khách hàng:" />
                <TextField fx:id="customerFilterField" prefHeight="25.0" prefWidth="138.0" />

                <Label text="Sản phẩm:" />
                <TextField fx:id="productFilterField" prefHeight="25.0" prefWidth="159.0" />

                <Label text="Ngày bán:" />
                <DatePicker fx:id="dateFilterPicker" prefHeight="25.0" prefWidth="135.0" />

                <Button onAction="#handleFilter" text="Lọc" />
                <Button onAction="#handleReset" text="Làm mới" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="invoiceTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="invoiceIdColumn" prefWidth="104.0" text="Mã HĐ" />
                <TableColumn fx:id="customerIdColumn" prefWidth="93.0" text="Mã KH" />
                <TableColumn fx:id="userIdColumn" prefWidth="93.0" text="Mã NV" />
                <TableColumn fx:id="dateColumn" prefWidth="95.0" text="Ngày bán" />
                <TableColumn fx:id="totalAmountColumn" prefWidth="113.0" text="Tổng tiền" />
                <TableColumn fx:id="discountColumn" prefWidth="142.0" text="Giảm giá" />
                <TableColumn fx:id="statusColumn" prefWidth="149.0" text="Trạng thái" />
            </columns>
        </TableView>

    </center>
</BorderPane>
