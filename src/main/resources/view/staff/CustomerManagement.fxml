<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="820.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.staff.CustomerManagementController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="927.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="QUẢN LÝ KHÁCH HÀNG" />
            <HBox alignment="TOP_RIGHT" spacing="10">
                <TextField fx:id="searchField" promptText="Tìm theo tên, SĐT hoặc Email" />
                <Button onAction="#searchCustomer" text="Tìm kiếm" />
                <Button onAction="#refresh" text="Làm mới" />
                <Button onAction="#addCustomer" text="Thêm khách hàng" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="customerTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="125.0" text="Họ tên" />
                <TableColumn fx:id="phoneColumn" prefWidth="133.0" text="SĐT" />
                <TableColumn fx:id="emailColumn" prefWidth="225.0" text="Email" />
                <TableColumn fx:id="addressColumn" prefWidth="224.0" text="Địa chỉ" />
                <TableColumn fx:id="actionsColumn" prefWidth="112.0" text="Hành động" />
            </columns>
        </TableView>
    </center>
</BorderPane>
