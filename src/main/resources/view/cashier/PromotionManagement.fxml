<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.cashier.PromotionManagementController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Title -->
    <Label layoutX="20" layoutY="20"
           text="Manage Promotions"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Table of Promotions -->
    <TableView fx:id="tblPromotion" layoutX="20" layoutY="60" prefWidth="760" prefHeight="280">
        <columns>
            <TableColumn fx:id="colID" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Tên khuyến mãi" prefWidth="180"/>
            <TableColumn fx:id="colDesc" text="Mô tả" prefWidth="200"/>
            <TableColumn fx:id="colDiscount" text="Giảm (%)" prefWidth="80"/>
            <TableColumn fx:id="colStart" text="Bắt đầu" prefWidth="120"/>
            <TableColumn fx:id="colEnd" text="Kết thúc" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Buttons -->
    <HBox layoutX="20" layoutY="360" spacing="10">
        <children>
            <Button text="Thêm" fx:id="btnAdd" prefWidth="120"/>
            <Button text="Làm mới" fx:id="btnRefresh" prefWidth="80"/>
            <Button text="Xóa" fx:id="btnDelete" prefWidth="80"/>
            <Button text="Sửa" fx:id="btnEdit" prefWidth="80"/>
        </children>
    </HBox>

</AnchorPane>
