<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.cashier.ReturnPolicyManagementController"
            prefWidth="740.0" prefHeight="600.0">

    <!-- Return Policy Table -->
    <TableView fx:id="returnPolicyTable" layoutX="20.0" layoutY="20.0" prefWidth="700.0" prefHeight="300.0">
        <columns>
            <TableColumn fx:id="policyIDColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="nameColumn" text="Policy Name" prefWidth="150.0"/>
            <TableColumn fx:id="descColumn" text="Description" prefWidth="300.0"/>
            <TableColumn fx:id="daysAllowedColumn" text="Days Allowed" prefWidth="100.0"/>
        </columns>
    </TableView>

    <!-- Input Fields and Button Container -->
    <HBox layoutX="20.0" layoutY="350.0" spacing="10">
        <TextField fx:id="nameField" promptText="Policy Name" prefWidth="180.0"/>
        <TextField fx:id="descField" promptText="Description" prefWidth="300.0"/>
        <TextField fx:id="daysAllowedField" promptText="Days Allowed" prefWidth="100.0"/>
        <Button fx:id="addPolicyButton" text="Add Policy" onAction="#handleAddReturnPolicy" prefWidth="100.0"/>
    </HBox>
</AnchorPane>
