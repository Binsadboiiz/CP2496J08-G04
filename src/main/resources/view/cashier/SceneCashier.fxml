<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.cashier.CashierController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Cashier Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="transactionTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="productColumn" text="Product" prefWidth="150"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <Label text="Product:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="productField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add Transaction" onAction="#handleAddTransaction" style="-fx-base: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Logout" onAction="#handleLogout" style="-fx-base: #F44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>
