<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="700.0" prefWidth="1020.0"
            stylesheets="@../../css/scenemain.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.cashier.CashierController">

    <!-- Sidebar -->
    <left>
        <VBox id="sidebar" fx:id="sidebar" alignment="TOP_CENTER" prefWidth="200" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="20" />
            </padding>

            <StackPane fx:id="userCard" styleClass="user-card">
                <VBox alignment="CENTER" spacing="10">
                    <!-- <ImageView fx:id="avatarImage" fitWidth="60" fitHeight="60" styleClass="avatar"/> -->
                    <Label fx:id="usernameLabel" text="Admin" styleClass="username-label"/>
                    <Label fx:id="roleLabel" text="Vai TrÃ²" styleClass="role-label"/>
                </VBox>
            </StackPane>

            <Button fx:id="btnControlPanelConfig" maxWidth="180" onAction="#loadControlPanel" styleClass="sidebar-button" text="ControlPanelConfig">
                <font>
                    <Font name="Times New Roman Bold" size="18" />
                </font>
            </Button>

            <Button fx:id="btnReturnPolicy" maxWidth="180" onAction="#loadReturnPolicy" styleClass="sidebar-button" text="Return Policy">
                <font>
                    <Font name="Times New Roman Bold" size="18" />
                </font>
            </Button>

            <Button fx:id="btnPromotion" maxWidth="180" onAction="#loadPromotionManagement" styleClass="sidebar-button" text="Promotion">
                <font>
                    <Font name="Times New Roman Bold" size="18" />
                </font>
            </Button>

            <Button fx:id="btnRevenueReport" maxWidth="180" onAction="#loadRevenueReports" styleClass="sidebar-button" text="Revenue Report">
                <font>
                    <Font name="Times New Roman Bold" size="18" />
                </font>
            </Button>

            <Button fx:id="btnSalaryHistory" maxWidth="180" onAction="#loadSalaryCalculation" styleClass="sidebar-button" text="Salary History">
                <font>
                    <Font name="Times New Roman Bold" size="18" />
                </font>
            </Button>

            <!-- Fixed spacer -->
            <Pane>
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Pane>

            <Button fx:id="btnLogout" maxWidth="180" onAction="#logout" styleClass="logout-button" text="Logout">
                <font>
                    <Font name="Times New Roman Bold" size="18" />
                </font>
            </Button>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <AnchorPane fx:id="contentArea" prefHeight="680" prefWidth="980.0" />
    </center>

</BorderPane>
